<h1>Listing appointments</h1>

<table>
  <tr>
    <th>Appointment time</th>
    <th>Reason for visit</th>
    <th>Requires reminder</th>
    <th>Customer</th>
    <th>Pet</th>
    <th>Veterinary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.appointment_time %></td>
    <td><%= appointment.reason_for_visit %></td>
    <td><%= appointment.requires_reminder %></td>
    <td><%= link_to appointment.pet.customer.name, appointment.pet.customer %></td>
    <td><%= link_to appointment.pet.name, customer_pet_path(appointment.pet.customer, appointment.pet) %></td>
    <td><%= link_to appointment.veterinary.name, appointment.veterinary %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

